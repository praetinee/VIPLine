<!DOCTYPE html>
<html>
<head>
    <title>Find My Group ID</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://static.line-scdn.net/liff/edge/2/sdk.js"></script>
    <link href="https://cdn.tailwindcss.com" rel="stylesheet">
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">
    <div class="max-w-sm mx-auto p-6 bg-white rounded-lg shadow-md text-center">
        <h1 class="text-xl font-bold text-gray-700 mb-2">LINE Group ID</h1>
        <p class="text-gray-500 mb-4">ID ของกลุ่มนี้คือ:</p>
        <div id="groupIdWrapper" class="p-3 bg-gray-200 rounded break-words text-gray-800 font-mono">
            <p id="groupId">กำลังเริ่มต้น LIFF...</p>
        </div>
        <p id="errorMessage" class="text-red-500 text-sm mt-4"></p>
    </div>

    <script>
        // LIFF ID ของคุณถูกตั้งค่าไว้ที่นี่แล้ว
        const LIFF_ID = "2008050252-QNqMbg63"; 

        document.addEventListener('DOMContentLoaded', function () {
            liff.init({ liffId: LIFF_ID })
                .then(() => {
                    const context = liff.getContext();
                    if (context && context.type === 'group') {
                        document.getElementById("groupId").textContent = context.groupId;
                    } else {
                        document.getElementById("groupId").textContent = "-";
                        document.getElementById("errorMessage").textContent = "กรุณาเปิดหน้านี้จากภายในกลุ่ม LINE ครับ";
                    }
                })
                .catch(err => {
                    console.error("LIFF Initialization failed", err);
                    document.getElementById("groupId").textContent = "เกิดข้อผิดพลาด";
                    document.getElementById("errorMessage").textContent = err.message;
                });
        });
    </script>
</body>
</html>
